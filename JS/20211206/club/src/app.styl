$appHeight = 768px
$appwidth = 1024px
$topHeight = 65px
$leftWidth = 215px
$footerHeight = 20px 
$updateHeight = 25px

*
  margin 0
  padding 0
  box-sizing border-box

img
  vertical-align middle

#app 
  width 1024px
  height $appHeight
  margin auto
  box-sizing border-box
  border 1px solid black
  font-family '標楷體'

#top 
  width 100%
  height $topHeight
  text-align center

#middle
  width 100%
  height 'calc(%s - %s - %s)' % ($appHeight $topHeight $footerHeight)

#left 
  width $leftWidth
  height 100%
  float left
  border 1px solid #000
  padding 3px
  
#menu
  height 'calc(100% - %s)' % ($updateHeight)
  border 1px solid #000
  h1
    color #f0f
    padding  1rem 0
    text-align center
    text-decoration underline
    font-size 24px
  table
    margin 0 auto
  td
    width 200px
    height 35px
    text-align center
    background url('~@/assets/menu1.png') center / cover
    cursor pointer

    &:hover
      background url('~@/assets/menu2.png') center / cover

#update 
  text-align center
  height $updateHeight

#right
  width 'calc(100% - %s)' % $leftWidth
  height 100%
  float left

marquee
  width 100%
  height 30px
  font-size 24px
  color #00f

#content
  text-align center
  height calc(100% - 30px)
  font-size 24px
  background url('~@/assets/0101.jpg')
  p
    color #00f

#footer
  text-align center